<div class="product">
    <div class="row">
        {{#if data}}
            {{# each data}}
                <div class="col-sm-6 col-md-4" style="padding: 25px">
                    <div class="img-thumbnail">
                        <a href="/product/{{_type}}/{{_id}}">
                            <img src="{{imagepath}}" alt="{{title}}" class="img-responsive">
                        </a>
                        <a href="/product/{{_type}}/{{_id}}">
                            <h3>{{title}}</h3>
                        </a>
                        <p class="Description">{{description}}</p>
                        <div class="clearfix">
                            <div class="price pull-left">Price:${{Price}}</div>
                            {{#if @root.isAuthenticated}}
                                <a href="/cart/add/{{_type}}/{{_id}}" class="btn btn-primary pull-right" role="button"><i class="fas fa-shopping-cart"></i>Add to cart</a>
                            {{else}}
                                <a href="/login" class="btn btn-primary pull-right" role="button"><i class="fas fa-shopping-cart"></i>Add to cart</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <h3>Search for not found</h3>
        {{/if}}
    </div>
</div>