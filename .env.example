# Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Node Environment (development, production)
NODE_ENV=development

# Session Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-secret-key-here-generate-a-random-one

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/shopping

# Server Configuration
PORT=3000

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Session Configuration
SESSION_SECURE=false
SESSION_SAME_SITE=lax

# Flagsmith Feature Flags
# Get your environment key from https://flagsmith.com/
FLAGSMITH_ENV_KEY=
FLAGSMITH_API_URL=https://edge.api.flagsmith.com/api/v1/
FLAGSMITH_ENABLED=true

# For Production with HTTPS
# SECURE_COOKIES=true
# TRUST_PROXY=1
# SESSION_SECURE=true

# OpenTelemetry (Optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
# OTEL_SERVICE_NAME=rockndogs
