{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id", "_type", "_source"] }],
    "func-names": "off",
    "consistent-return": "off",
    "no-param-reassign": ["error", { "props": false }],
    "prefer-arrow-callback": "off",
    "max-len": ["warn", { "code": 120 }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_|next" }],
    "comma-dangle": ["error", "never"],
    "linebreak-style": "off"
  }
}
